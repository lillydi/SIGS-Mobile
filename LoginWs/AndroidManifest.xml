<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.loginws"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.exemple.activities.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.exemple.activities.InternetDesativada"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.exemple.activities.InicialActivity"
            android:label="@string/title_activity_inicial"
            android:launchMode="singleInstance" />
        <activity
            android:name="com.exemple.activities.NewUserActivity"
            android:label="@string/title_activity_new_user" >
        </activity>
        <activity
            android:name="com.exemple.activities.OpcaoActivity"
            android:label="@string/title_activity_opcao" >
        </activity>
        <activity
            android:name="com.exemple.activities.ListarFamiliaActivity"
            android:label="@string/title_activity_listar_familia"
            android:parentActivityName="android.app.ListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="android.app.ListActivity" />
        </activity>
        <activity
            android:name="com.exemple.activities.CadastrarFamiliaActivity"
            android:label="@string/title_activity_cadastrar_familia" >
        </activity>
    </application>

</manifest>
